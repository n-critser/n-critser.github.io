   

      /* Large Desktop */
      @media (min-width: 980px) {
      body {
      padding-top: 60px;
      }
      .linediv-l {
      border-right: 1px white solid;
      }
      .linediv-r {
      border-left: 1px white solid;
      }
      }

      /*Landscape phones and down */
      @media (max-width: 480px) {
      .copy {
      padding: 2.5% 10%;
      }
      .linediv-l {
      border-bottom: 1px white solid;
      }
      .linediv-r {
      border-top: 1px white solid;
      }
      }
      
      body {
      font-family:font-family: 'Creepster', cursive , Helvetica, Arial, sans-serif;
      }
      .heading, .subheading{
      font-family: 'Ubuntu', Helvetica, Arial, sans-serif;
      test-align: center;
      }

      /*  ICONS */
      a:before, a:after {
      font-family:'Heydings';
      }
      
      a[href*="http://creativecommons.org/licenses/by-sa/3.0/"]:before {
      color:#c03f29;
      content:'R';
      }
      
      a[href*="http://creativecommons.org/licenses/by-sa/3.0/"]:after {
      vertical-align:super;
      font-size:16px;
      content:'e';
      }

     
      p.lead {
      padding-top: 1.5%;
      font-size: 24px;
      line-height: 30px;
      }

      p {
      font-size: 18px;
      line-height: 24px;
      }

      /*   canvas */
      .canvas {
	text-align: center;
	top: 2%;
	left: 2%;
	background: transparent;
	}
      /* Video pitch and Action */
      .pitch {
      padding: 2.5% 0%;
      }

      .order {
      padding: 2% 0%;
      }

      .actions {
      background-color: #343434;
      padding: 3% 0%;
      }
      
      .video, .thermometer, .order, .social, .statistics {
      text-align: center;
      }

      .statistics h3, .statistics p {
      color: white;
      }

      /* Marketing Copy and Footer */

      .copy {
      padding-top: 2.5%;
      padding-bottom: 2.5%;
      text-align: justify;
      }

      .asset {
      padding: 2.5% 0%;
      }
      
      .footer {
      color: #cccccc;
      text-align: center;
      }

      .footer p {
      font-size: 11px;
      }

      .footer a {
      color: #ccccff;
      }
   